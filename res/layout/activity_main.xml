<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_height="fill_parent" 
     android:layout_width="fill_parent"
	 android:scrollbars="none"
	 android:orientation="vertical"
	 >



<TableLayout 
    
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FFFFFF"
    tools:context=".MainActivity" 
    >
    
  
    
    <TableRow
       android:id="@+id/TableRow01"
	   android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:gravity="center" 
       android:background="#008b95" >
       
               
       <TextView
       		android:id="@+id/textView1"
       		android:text="Нормы вибрации"
       		android:gravity="center"
       		android:textSize="25sp"
       		android:textColor="#FFFFFF"
       		android:textStyle="bold"  />
	
	</TableRow>
 
        
    <TableRow
       android:id="@+id/TableRow02"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:gravity="center" 
       android:background="#008b95" >

        <TextView
            android:id="@+id/textView2"
            android:text="подшипников качения"
            android:textSize="15sp"
            android:gravity="center" 
            android:textStyle="normal" 
            android:textColor="#FFFFFF"
            android:paddingBottom="4sp" />
	
	</TableRow>	
	    
    
       <TableRow
       android:id="@+id/TableRow02_2"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:gravity="center" 
       android:background="#008b95" >

        <TextView
            android:id="@+id/textView2_2"
            android:text="РД ВНИПП.038-08"
            android:textSize="15sp"
            android:gravity="center" 
            android:textStyle="bold" 
            android:textColor="#FFFFFF"
            android:paddingBottom="4sp"
              />
	
	</TableRow>	
    
    
    <TableRow
        
       android:id="@+id/TableRow03"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:gravity="center" 
        >    
       
       <TextView
           
       		android:id="@+id/textView3"
       		android:gravity="center" 
       		android:text="Тип подшипника"
       		android:textSize="15sp"
       		android:textStyle="bold"
       		android:padding="10sp" />
    
	</TableRow>

  <TableRow
      
       android:id="@+id/TableRow04"
	   android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:gravity="center" >   
    
    
      <Spinner
       
       		android:id="@+id/spinner1"
         	android:gravity="left"
	      	 
	       	/>
      
    </TableRow>


  
  
  	<TableRow
      
       android:id="@+id/TableRow05"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:gravity="center" 
        >  
       
  	   <TextView
  	       
       		android:id="@+id/textView4"
       		android:text="Диаметр отверстия, мм"
       		android:gravity="center" 
       		android:padding="10sp"
       		android:textSize="15sp"
       		android:textStyle="bold" />
  	      
  	</TableRow>
  
  	<TableRow
      
       android:id="@+id/TableRow06"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:gravity="center" > 
       
  	   <Spinner
  	       
       		android:id="@+id/spinner2"
         	android:gravity="left"
	       	android:layout_width="280sp"
       		android:layout_height="wrap_content"
	       	 /> 
  	    
  	    </TableRow>
  	    

      
     <TableRow
      
       android:id="@+id/TableRow07"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:gravity="center" 
       >  
   
   
    	<TextView
    	    
       		android:id="@+id/textView5"
       		android:gravity="center" 
       		android:padding="10sp"
       		android:text="Вибрационный разряд"
       		android:textSize="15sp"
       		android:textStyle="bold" />
   
    </TableRow>
   
   
     <TableRow
      
       android:id="@+id/TableRow08"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:gravity="center" >
      
      <Spinner
          
       		android:id="@+id/spinner3"
          	android:gravity="left"
	       	
       		
       		 />
      
     </TableRow> 
   
   
     <TableRow
      
       android:id="@+id/TableRow09"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:gravity="center" 
        >  
   
     
   		<TextView
       		android:id="@+id/textView6"
       		android:padding="10sp"
       		android:gravity="center" 
       		android:text="Частотный диапазон (параметр)"
       		android:textSize="15sp"
       		android:textStyle="bold" />
   
     </TableRow> 
     
     <TableRow
      
       android:id="@+id/TableRow10"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:gravity="center" >   
     
   		<Spinner
   		    
       		android:id="@+id/spinner4"
         	android:gravity="left"
	       
       		
       		/>

     </TableRow> 
     
    

     <TableRow
      
       android:id="@+id/TableRow11"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:gravity="center"
       android:layout_marginTop ="20sp"   > 


   		<TextView
   		    
       		android:id="@+id/textView7"
       		android:background="#008b95"
       		android:padding="1sp"
       		android:gravity="center" 
       		android:text="Уровень виброскорости, дБ"
       		android:textColor="#FFFFFF"
       		android:textSize="15sp"
       		android:textStyle="bold"
       		
       		 />

	  </TableRow> 

          
     
      <TableRow
      
       android:id="@+id/TableRow12"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_marginTop="2sp"
       android:gravity="center" > 


   		<TextView
       		android:id="@+id/textView8"
       		android:gravity="center" 
       		android:padding="2sp"
       		android:textColor="#ffa02f"
      		
       		android:textSize="25sp"
       		android:textStyle="bold"  />
   
   		</TableRow>
  
   
    <TableRow
       android:id="@+id/TableRow13"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:gravity="center" >
    
    <ImageView
        android:id="@+id/imageView1"
        android:layout_marginTop="2sp"
        android:padding="10sp"
        android:gravity="center" 
     	android:onClick="about_company"
     	android:background="#008b95"
     	android:src="@drawable/logo5" 
     	android:layout_weight="1"
     	android:contentDescription="@string/description" />
    
	</TableRow>	
   
  
</TableLayout>

</ScrollView>
